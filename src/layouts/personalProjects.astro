---
const allProjects = await Astro.glob("../content/personalProjects/*.md");
---

<div
  class="flex flex-col items-center gap-10 md:flex-row md:flex-wrap md:justify-around"
>
  {
    allProjects.map((project) => (
      <div class="bg-lime-100 dark:bg-cyan-950 text-cyan-950 dark:text-lime-100 rounded-3xl outline outline-2 outline-black dark:outline-lime-100 w-full max-w-sm sm:w-96 overflow-hidden solidshadow">
        <div class="bg-cyan-950 text-[#dafdba] p-3 outline outline-2 outline-black">
          <h3 class="text-lg">{project.frontmatter.title}</h3>
        </div>
        <div class="">
          <img src={project.frontmatter.image} alt="Image" class="w-full" />
        </div>
        <div class="p-3">
          <p>{project.frontmatter.description}</p>
        </div>
        <a
          href={project.frontmatter.downloadLink}
          class="flex flex-row place-items-center gap-5 mb-5 bg-cyan-950 dark:bg-lime-100 text-lime-50 dark:text-cyan-950 py-3 px-8 rounded-full w-fit mx-auto shadow-md"
        >
          <p>Download apk</p>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-6 h-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3"
            />
          </svg>
        </a>
      </div>
    ))
  }
</div>
